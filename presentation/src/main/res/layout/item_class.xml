<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/class_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?background_color">

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/hidden"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_hidden"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/menu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/startTime"
        style="@style/AppText"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/type"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="9:00" />

    <TextView
        android:id="@+id/finishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="8dp"
        android:alpha=".8"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:textColor="?android:textColorPrimary"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTime"
        tools:text="12:20" />

    <TextView
        style="@style/AppText.Small"
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/capsule_week"
        android:ellipsize="marquee"
        android:gravity="center"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:singleLine="true"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/startTime"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="практика"
        tools:visibility="visible" />

    <TextView
        style="@style/AppText.Small"
        android:id="@+id/innerGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/capsule_inner_group"
        android:ellipsize="marquee"
        android:gravity="center"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="14.0sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/type"
        app:layout_constraintStart_toEndOf="@+id/type"
        tools:text="1-Я ПОДГРУППА"
        tools:visibility="visible" />

    <TextView
        style="@style/AppText"
        android:id="@+id/subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:maxWidth="320dp"
        android:minWidth="220dp"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/type"
        app:layout_constraintTop_toBottomOf="@+id/type"
        app:layout_constraintWidth_default="spread"
        tools:text="Транспортная политика, контроль и надзор в сфере транспорта " />

    <TextView
        style="@style/AppText.Small"
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:drawableStart="@drawable/ic_person"
        android:gravity="center_vertical"
        android:textColor="?android:textColorPrimary"
        android:textSize="14.0sp"
        app:layout_constraintBottom_toTopOf="@+id/location"
        app:layout_constraintStart_toStartOf="@+id/subject"
        app:layout_constraintTop_toBottomOf="@+id/subject"
        tools:text="Иванов И.И." />

    <TextView
        style="@style/AppText.Small"
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/ic_place"
        android:gravity="center_vertical"
        android:textColor="?android:textColorPrimary"
        android:textSize="14.0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/teacher"
        app:layout_constraintTop_toBottomOf="@+id/teacher"
        tools:text="ул. Луначараского 2" />

</androidx.constraintlayout.widget.ConstraintLayout>
