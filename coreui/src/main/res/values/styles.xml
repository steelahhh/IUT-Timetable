<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/iutColor</item>
        <item name="colorPrimaryDark">@color/iutColor</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">#FFF</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="background_color">@color/backgroundLight</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/backgroundLight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/backgroundLight</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="md_font_title">@font/manrope_bold</item>
        <item name="md_font_body">@font/manrope_regular</item>
        <item name="md_font_button">@font/manrope_semibold</item>
        <item name="md_color_button_text">?android:textColorPrimary</item>
        <item name="md_background_color">@color/backgroundLight</item>
        <item name="md_corner_radius">16dp</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.LargeComponent</item>
        <item name="bottomSheetStyle">@style/Widget.BottomSheet</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="Widget.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet">
        <item name="backgroundTint">?background_color</item>
    </style>

    <style name="ShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/iutColor</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/iutColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="AppText">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppText.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppText.Smaller">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppText.Title">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AppText.Title.Bold" parent="AppText.Title">
        <item name="fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="AppText.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppText.Larger">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppText.Capsule">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextMaterialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="strokeColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">@style/AppText.Large</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OutlineMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">@style/AppText.Large</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
