<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="md_font_title">@font/manrope_bold</item>
        <item name="md_font_body">@font/manrope_regular</item>
        <item name="md_font_button">@font/manrope_semibold</item>
        <item name="md_corner_radius">8dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppText">
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/main_text_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppText.Title">
        <item name="android:textSize">42sp</item>
    </style>

    <style name="AppText.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppText.Capsule">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
